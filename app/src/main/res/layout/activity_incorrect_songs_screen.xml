<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff00e0"
    tools:context=".activity.IncorrectSongsActivity">

    <ScrollView
        android:id="@+id/incorrect_songs_scroll"
        android:layout_width="409dp"
        android:layout_height="256dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/show_incorrect_songs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incorrect_song_text">

        <LinearLayout
            android:id="@+id/incorrect_songs_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <TextView
        android:id="@+id/incorrect_song_text"
        android:layout_width="210dp"
        android:layout_height="86dp"
        android:layout_marginTop="46dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/show_incorrect_songs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/incorrect_songs_back_to_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="switchBackToWelcome"
        android:text="@string/game_end__go_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incorrect_songs_scroll" />
</androidx.constraintlayout.widget.ConstraintLayout>